---
import LinkedinIcon from '../../components/icons/LinkedinIcon.astro';
import SocialPill from '../../components/social-pill/SocialPill.astro';
import GmailIcon from "../../components/icons/GmailIcon.astro";
import GithubIcon from '../icons/GithubIcon.astro';
---

<section class="flex flex-col text-black">
  <div class="max-w-4xl">
    <h1 class="text-2xl font-semibold pb-4 text-textDarkPink">Isabel Caballero</h1>
    <div class="flex md:gap-0 gap-4 flex-col md:flex-row">
      <div class="text-textPrincipal font-bold flex flex-col gap-y-1">
        <span class="text-3xl md:text-8xl">Desarrolladora</span>
        <span class="text-3xl md:text-9xl">FrontEnd</span>
      </div>
    </div>

    <div class="flex flex-col">
      <h2 class="pt-4 text-base md:text-2xl text-wrap md:mt-4">
        <span class="text-textDarkPink text-3xl font-semibold">+3 años de experiencia.</span><br />
        Vivo en Bogotá, Colombia.
        <br />
        Especializada en crear interfaces de usuario intuitivas, dinámicas y únicas.
      </h2>
    </div>

    <nav class="flex flex-wrap md:gap-x-4 mt-8 text-xs md:text-xl md:justify-normal">
      <ul class="flex flex-wrap gap-4">
        <li>
          <SocialPill href="https://www.linkedin.com/in/isabel-caballero-dev/" aria-label="LinkedIn">
            <LinkedinIcon class="w-6 h-6" />
            <p>LinkedIn</p>
          </SocialPill>
        </li>
        <li>
          <SocialPill href="https://github.com/jadodev" aria-label="GitHub">
            <GithubIcon class="w-7 h-7" />
            <p>GitHub</p>
          </SocialPill>
        </li>
        <li>
          <SocialPill aria-label="Gmail">
            <GmailIcon class="w-8 h-8" />
            <p>devisamott@gmail.com</p>
          </SocialPill>
        </li>
      </ul>
    </nav>
  </div>
</section>
